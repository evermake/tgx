{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "jsxImportSource": "@telegum/tgx",
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "paths": {
      "@telegum/tgx/jsx-runtime": ["./src/jsx-runtime"]
    },
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.tsx"
  ]
}
