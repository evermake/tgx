{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "eslint.config.ts",
    "tsup.config.ts"
  ]
}
